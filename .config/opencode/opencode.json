{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "permission": {
    "bash": {
      "du *": "allow",
      "*": "ask"
    }
  },
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "@playwright/mcp@latest",
        "--output-dir",
        "/Users/aadishverma/Desktop/codeproj/sandbox/JV-Copilot/frontend/ss",
        "--browser",
        "Helium",
        "--executable-path",
        "/Applications/Helium.app/Contents/MacOS/Helium"
      ],

      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": ["bun", "x", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  },
  "plugin": ["@tarquinen/opencode-dcp@0.4.2"]
}
